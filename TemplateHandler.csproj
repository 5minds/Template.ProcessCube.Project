<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageId>BeginnersCourse.Template</PackageId>
    <Title>BeginnersCourse Template</Title>
    <Authors>Jeremy Hill</Authors>
    <Description>Template fÃ¼r den Beginners Kurs.</Description>
    <PackageTags>dotnet-new;templates;</PackageTags>
    <TargetFramework>net6.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <NoDefaultExcludes>true</NoDefaultExcludes>

    <RepositoryUrl>https://github.com/5minds/BeginnersCourse.Template.Vorlage</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content
      Include="BeginnersCourse.Template.Vorlage\**\*"
      Exclude="BeginnersCourse.Template.Vorlage\**\bin\**;BeginnersCourse.Template.Vorlage\**\obj\**;BeginnersCourse.Template.Vorlage\**\node_modules\**"/>
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>
