<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageId>BeginnersCourse.Template</PackageId>
    <Title>BeginnersCourse Template</Title>
    <Authors>Jeremy Hill</Authors>
    <Description>Template f√ºr den Beginners Kurs.</Description>
    <PackageTags>dotnet-new;templates;</PackageTags>
    <TargetFramework>net6.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <NoDefaultExcludes>true</NoDefaultExcludes>

    <RepositoryUrl>https://github.com/5minds/Template.ProcessCube.BeginnersCourse</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content
      Include="Template.ProcessCube.BeginnersCourse\**\*"
      Exclude="Template.ProcessCube.BeginnersCourse\**\bin\**;Template.ProcessCube.BeginnersCourse\**\obj\**;Template.ProcessCube.BeginnersCourse\**\node_modules\**"/>
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>
