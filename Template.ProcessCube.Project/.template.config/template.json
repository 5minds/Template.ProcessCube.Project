{
  "$schema": "http://json.schemastore.org/template",
  "author": "Jeremy Hill",
  "classifications": [],
  "identity": "Template.ProcessCube.Project",
  "name": "ProcessCube Projekt Vorlage",
  "shortName": "processcubeproject",
  "sourceName": "Template.ProcessCube.Project",
  "description": "",
  "primaryOutputs": [
    {
      "path": "Template.ProcessCube.Project.sln"
    }
  ],
  "symbols": {
    "sourceNameLower": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "lc",
      "replaces": "source_name_lower"
    },
    "sourceNameLowerDocker": {
      "type": "derived",
      "valueSource": "sourceNameLower",
      "valueTransform": "replaceDotWithUnderscore",
      "replaces": "source_name_lower_docker"
    },
    "add-ui-tests": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "Add UI tests to the project"
    }
  },
  "forms": {
    "lc": {
      "identifier": "lowerCaseInvariant"
    },
    "replaceDotWithUnderscore": {
      "identifier": "replace",
      "pattern": "\\.",
      "replacement": "_"
    }
  },
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ],
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "add-ui-tests",
          "include": [
            "MakefileTesting"
          ],
          "exclude": [
            "Makefile"
          ],
          "rename": {
            "MakefileTesting": "Makefile"
          }
        },
        {
          "condition": "!(add-ui-tests)",
          "exclude": [
            "integration-tests/**/*",
            "docker-compose.tests.yml",
            "MakefileTesting"
          ]
        }
      ]
    }
  ]
}
